<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/survey_title_label"/>
    <EditText
        android:id="@+id/survey_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/survey_question_hint"/>
    <EditText
        android:id="@+id/survey_first_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/survey_response_hint"/>
    <EditText
        android:id="@+id/survey_second_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/survey_response_hint"/>


</LinearLayout>