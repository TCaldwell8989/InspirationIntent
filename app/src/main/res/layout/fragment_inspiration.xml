<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@color/colorAccent">


    <TextView
        android:id="@+id/inspiration_title_textview"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_above="@id/edit_inspiration_note"
        android:layout_alignTop="@id/inspiration_image_button"
        android:textAlignment="center"
        android:text="@string/survey_title_label"
        android:textColor="@color/colorTitle"
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/inspiration_image_button"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:visibility="visible"
        android:layout_toEndOf="@id/inspiration_title_textview"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/take_photo"
        android:src="@drawable/ic_photo_add" />


    <EditText
        android:id="@+id/edit_inspiration_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inspiration_image_button"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:textSize="18dp"
        android:textCursorDrawable="@color/colorPrimaryDark"
        android:hint="@string/inspiration_note_hint"/>

    <ImageView
        android:id="@+id/survey_full_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edit_inspiration_note"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>




</RelativeLayout>